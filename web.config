<configuration>
  <system.webServer>
    <handlers>
      <add name="iisnode" path="index.js" verb="*" modules="iisnode" />
    </handlers>
    <rule name="Static files" stopProcessing="true">
      <match url="/*" />
      <action type="Rewrite" url="public/{REQUEST_URI}"/>
    </rule>
    <rule name="Express.js API">
      <match url="/api/*" />
      <action type="Rewrite" url="index.js"/>
    </rule>
  </system.webServer>
</configuration>